<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RssReader.Views.AddNewRssPage"
             BackgroundColor="{StaticResource clrBackground}"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Сохранить" Command="{Binding cmdSave}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Название:"/>
            <Entry Text="{Binding Name}" Placeholder="Введите имя"/>
            <Label Text="{Binding NameError}" Style="{StaticResource ErrorText}"/>

            <Label Text="Путь:"/>
            <Entry Text="{Binding Link}" Placeholder="Введите ссылку"/>
            <Label Text="{Binding LinkError}" Style="{StaticResource ErrorText}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>